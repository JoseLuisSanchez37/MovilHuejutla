<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/layout_gridview_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_selector_anuncio">
    
    <ImageView 
        android:id="@+id/imagen_anuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:paddingBottom="5dp"/>
    
    <TextView
        android:id="@+id/titulo_anuncio"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_below="@id/imagen_anuncio" />
    
    <TextView 
        android:id="@+id/descripcion_anuncio"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:paddingBottom="3dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@id/titulo_anuncio" />
        
    <LinearLayout
        android:layout_below="@id/descripcion_anuncio"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal">
    
	    <TextView 
	        android:id="@+id/tipo_anuncio"
	        android:layout_width="0dp"
	        android:layout_weight=".5"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:background="@color/turquoise"
	        android:padding="5dp"
	        android:textStyle="bold"
	        android:gravity="center"
	        android:textColor="@android:color/white" />
	    
	    <TextView 
	        android:id="@+id/fecha_anuncio"
	        android:layout_width="0dp"
	        android:layout_weight=".5"
	        android:textSize="15sp"
	        android:textStyle="bold"
	        android:layout_height="wrap_content"
	        android:background="@color/emerald"
	        android:padding="5dp"
	        android:gravity="center"
	        android:textColor="@android:color/white"/>
     
    </LinearLayout>
    
</RelativeLayout>